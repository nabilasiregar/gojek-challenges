<h1>Items</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Price</th>
  </tr>
  <% items.each do |item| %>
  <tr>
    <td><%= item.name %></td>
    <td><%= item.price %></td>
    <td><%= item.category %></td>
    <td><a href="/item/<%= item.id %>">Show</a></td>
    <td><a href="/item/<%= item.id %>/edit">Edit</a></td>
    <td><a href="/item/<%= item.id %>/delete">Delete</a></td>       
  </tr>
  <% end %>
</table>

<a href="/items/new">Add new item</a>
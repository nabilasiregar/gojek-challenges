
<table>
  <thead>
    <th>Name</th>
    <th>Price</th>
    <th>Category</th>
  </thead>
  <tbody>
  <% items.each do |item| %>
  <tr>
    <td><%= item.name %></td>
    <td><%= item.price %></td>
    <td><%= item.category %></td>
  </tr>
  <% end %>
  </tbody>
</table>
<a href="/items/new">Add new item</a>